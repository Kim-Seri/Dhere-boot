<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springstudy.dhere.mappers.FollowerMapper">

    <insert id="insertFollow" parameterType="com.springbootstudy.dhere.domain.Follower">
        INSERT INTO follower (follower_email, following_email)
        VALUES (#{follower_email}, #{following_email})
    </insert>
    
    <delete id="deleteFollow" parameterType="map">
        DELETE FROM follower
        WHERE follower_email = #{followerEmail} 
        AND following_email = #{followingEmail}
    </delete>
    
    <select id="isFollowing" parameterType="map" resultType="int">
	    SELECT COUNT(*)
	    FROM follower
	    WHERE follower_email = #{followerEmail}
	    AND following_email = #{followingEmail}
	</select>

</mapper>