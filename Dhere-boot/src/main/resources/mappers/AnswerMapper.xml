<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springstudy.dhere.mappers.AnswerMapper">

    <insert id="insertAnswer" parameterType="Answer">
        INSERT INTO answer(no, answer_content)
        VALUES(#{no}, #{answerContent})
    </insert>
    
    <select id="answerList" resultType="Answer">
		SELECT
			answer_content as answerContent
		FROM answer
		WHERE no = #{inquiryNo}
	</select>

</mapper>
